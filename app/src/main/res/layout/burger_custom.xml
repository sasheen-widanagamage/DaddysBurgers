<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBg">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@color/colorSurface">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:tint="@color/colorAccent"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Customize Burger"
            android:textColor="@color/colorTextPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="Burger"
                android:scaleType="fitCenter"
                android:src="@drawable/bg4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/cart_item_bg"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patty"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rgPatty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <RadioButton
                        android:id="@+id/rbBeef"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Beef"
                        android:textColor="@color/colorTextSecondary" />

                    <RadioButton
                        android:id="@+id/rbChicken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Chicken"
                        android:textColor="@color/colorTextSecondary" />

                    <RadioButton
                        android:id="@+id/rbVeggie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Veggie"
                        android:textColor="@color/colorTextSecondary" />
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Cheese"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="6dp">

                    <CheckBox
                        android:id="@+id/cbCheddar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Cheddar"
                        android:textColor="@color/colorTextSecondary" />

                    <CheckBox
                        android:id="@+id/cbSwiss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Swiss"
                        android:textColor="@color/colorTextSecondary" />

                    <CheckBox
                        android:id="@+id/cbMozz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Mozzarella"
                        android:textColor="@color/colorTextSecondary" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Bun"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rgBun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <RadioButton
                        android:id="@+id/rbSesame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sesame"
                        android:textColor="@color/colorTextSecondary" />

                    <RadioButton
                        android:id="@+id/rbBrioche"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brioche"
                        android:textColor="@color/colorTextSecondary" />

                    <RadioButton
                        android:id="@+id/rbGlutenFree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gluten-free"
                        android:textColor="@color/colorTextSecondary" />
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Veggies"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="6dp">

                    <CheckBox
                        android:id="@+id/cbLettuce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lettuce"
                        android:textColor="@color/colorTextSecondary" />

                    <CheckBox
                        android:id="@+id/cbTomato"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tomato"
                        android:textColor="@color/colorTextSecondary" />

                    <CheckBox
                        android:id="@+id/cbOnion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Onion"
                        android:textColor="@color/colorTextSecondary" />

                    <CheckBox
                        android:id="@+id/cbPickles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickles"
                        android:textColor="@color/colorTextSecondary" />

                    <CheckBox
                        android:id="@+id/cbJalapenos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JalapeÃ±os"
                        android:textColor="@color/colorTextSecondary" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Sauces"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="6dp">

                    <CheckBox
                        android:id="@+id/cbTomatoSauce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tomato Sauce"
                        android:textColor="@color/colorTextSecondary" />

                    <CheckBox
                        android:id="@+id/cbMayo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mayo"
                        android:textColor="@color/colorTextSecondary" />

                    <CheckBox
                        android:id="@+id/cbBbqSauce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BBQ Sauce"
                        android:textColor="@color/colorTextSecondary" />

                    <CheckBox
                        android:id="@+id/cbSweetChili"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sweet Chili Sauce"
                        android:textColor="@color/colorTextSecondary" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Notes"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtNotes"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_edittext"
                    android:gravity="top|start"
                    android:hint="Add special instructions"
                    android:padding="12dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textColorHint="@color/colorTextSecondary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rs. 1200.00"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnAddToCart"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:backgroundTint="@color/colorAccent"
                        android:text="Add to Cart"
                        android:textColor="@color/colorOnAccent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--Nav -->
    <include layout="@layout/include_bottom_nav" />
</LinearLayout>
